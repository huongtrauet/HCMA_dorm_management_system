<div class="student_management_student_profile_form">
  <div class= "container">
    <div class="profile_content">
      <div class="ui grid">
        <div class="five wide column">
          <div class="left_column">
            <div class="ava">
              <div class="ava_image">
                <img class="ui medium circular image" src="/assets/ava.jpg">
              </div>
              <div class="ava_icon">
                <button class="ui icon button">
                  <i class="edit outline icon"></i>
                </button>
                <button class="ui icon button">
                  <i class="trash alternate outline icon"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
        <div class="eleven wide column">
          <div class="right_column">
            <h3 class="ui dividing header">
              Student Information
            </h3>
            <%= form_for [:student, @student_profile], html: { class: "ui form" } do |f| %>
                <% if @student_profile.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(student_profile.errors.count, "error") %> prohibited this student_profile from being saved:</h2>
                    <ul>
                      <% student_profile.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>
                <div class="required field field_line">
                  <div class="two fields">
                    <div class="required field">
                      <%= f.label :full_name %>
                      <%= f.text_field :name, class: "input", required: true, placeholder: "Full name" %>
                    </div>
                    <div class="required field">
                      <label>Student ID</label>
                      <%= f.text_field :identity_card_number, class: "input", required: true, placeholder: "Ma KTX" %>
                    </div>
                  </div>
                </div>
                <div class="required field field_line">
                  <div class="two fields">
                    <div class="required field">
                      <label>Class name</label>
                      <%= f.text_field :class_name, class: "input", required: true, placeholder: "Class name" %>
                    </div>
                    <div class="required field">
                      <label>Email</label>
                      <%= f.text_field :email, class: "input", required: true, placeholder: "Email" %>
                    </div>
                  </div>
                </div>
                <div class="fields field_line">
                  <div class="required eight wide field">
                    <label>Identity Card Number</label>
                    <%= f.text_field :identity_card_number, class: "input",  required: true, maxlength: "16", placeholder: "Identity card number" %>
                  </div>
                  <div class="required eight wide field">
                    <label>Date of Birth</label>
                    <%= f.date_field :date_of_birth, class: "input date", data: {provide: "datepicker"}, required: true%>
                  </div>
                </div>
                <div class="required field field_line">
                  <label>Address</label>
                  <%= f.text_field :address, class: "input", required: true, placeholder: "Address" %>
                </div>
                <div class="field field_line">
                  <div class="two fields">
                    <div class="required field">
                      <label>Phone number</label>
                      <%= f.text_field :phone_number, class: "input", required: true, placeholder: "Phone number" %>
                    </div>
                    <%# <div class="required field">
                      <label for="gender">Select your gender</label>
                      <div class="inline fields">
