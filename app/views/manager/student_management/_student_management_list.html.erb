<div class="student_management_list">
  <div class="header" style="display: flex; justify-content: space-between;">
    <div class="header_title">
      <h3><%= t(".student_management") %>: </h3>
    </div>
    <div class="header_search">
      <button class="ui icon button" onclick="addStudent()">
        <i class="plus icon"></i>
      </button>
      <div class="ui icon input">
        <input type="text" placeholder="<%= t(".search_placeholder") %>" name="q" id="q" class="form-control search-student-form" />
        <i class="icon">
          <img src="/assets/search.png" style="width: 1rem; height: 1rem; width: 1rem; top: 50%; position: absolute; transform: translateY(-50%);right: 0.7rem;">
        </i> 
      </div>
    </div>
  </div>
  <div class="footer_line" style="height: 1px; background-color: rgba(34,36,38,.15); margin-top: 0.5rem; margin-bottom: 1.5rem"></div>
  <div  id="student_list">
    <table class="ui very basic selectable table">
      <thead>
        <tr>
          <th><%= t(".id") %></th>
          <th><%= t(".student_id_number") %></th>
          <th><%= t(".full_name") %></th>
          <th><%= t(".date_of_birth") %></th>
          <th><%= t(".room") %></th>
          <th><%= t(".class") %></th>
          <th><%= t(".check_in_date") %></th>
          <th><%= t(".status") %></th>
        </tr>
      </thead>
      <tbody> 
        <% @students.each_with_index do | student, index|%>
          <tr onclick="showStudentInfo(<%= student.id %>)">
            <td><%= index + 1 + (@page - 1)*Settings.pagination %></td>
            <td><%= student.student_id_number %></td>
            <td><%= student.student_profile.name %></td>
            <% if student.student_profile.date_of_birth %>
              <td><%= student.student_profile.date_of_birth.to_date %></td>
            <% else %>
              <td></td>
            <% end %>
            <td>
              <% if student.room.room_name == 'A1_0000' %>
                <%= t(".pending") %>
              <% else %>
                <%= student.room.room_name %></td>
              <% end %>
            <td><%= student.student_profile.class_name %></td>
            <% if student.check_in_date %>
              <td><%= student.check_in_date.to_date %></td>
            <% else %>
              <td></td>
            <% end %>
            <% if student.status == "PENDING" %>
            <td>
              <a class="ui tag label" ><%= t(".pending") %></a>
            </td>
            <% elsif student.status == "ACTIVE" %>
            <td>
              <a class="ui teal tag label teal_label"><%= t(".active") %></a>
            </td>
            <% end %>
          </tr>
          <div class="ui modal" id= "student_info_<%= student.id %>">
            <i class="close icon"></i>
            <div class="header">
              <%= t(".student_profile") %>
            </div>
            <div class="image content">
              <div class="ui grid">
                <div class="five wide column">
                  <div class="" style="width: 15rem; margin: 0 auto;">
                    <% if student.student_profile.avatar.url != nil %>
                      <img style="width: 15rem; height: 15rem; margin: 0 auto;"  src="<%= student.student_profile.avatar.url %>">
                    <% else %>
                      <img src="/assets/profile.png" style="width: 15rem; height: 15rem; margin: 0 auto;">
                    <% end %>
                    <div class="sub-info ui grid" style="padding-top: 1rem">
                      <input type="hidden" name="student_id" id="student_id" value="<%= student.id%>" />
                      <div class="two wide column" style="padding-bottom: 0!important">
                        <i class="icon address card outline"></i>
                      </div>
                      <div class="fourteen wide column" style="padding-bottom: 0!important">
                      <%= student.student_id_number %>
                      </div>
                      <div class="two wide column" style="padding-bottom: 0!important">
                        <i class="icon check square outline"></i>
                      </div>
                      <div class="fourteen wide column" style="padding-bottom: 0!important">
                        <%= student.student_profile.class_name %>
                      </div>
                      <div class="two wide column">
                        <i class="icon envelope outline"></i>
                      </div>
                      <div class="fourteen wide column">
                        <%= student.student_profile.email %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="description eleven wide column">
                  <div class="ui header" style="margin-bottom: 2rem;"><%= student.student_profile.name %></div>
                  <div class="student-info ui grid">
                    <div class="three wide column"><b><%= t(".date_of_birth") %>:</b></div>
                    <% if student.student_profile.date_of_birth %>
                      <div class="thirteen wide column"><%= student.student_profile.date_of_birth.to_date %></div>
                    <% else %>
                      <div class="thirteen wide column"></div>
                    <% end %>
                    <div class="three wide column"><b><%= t(".gender") %>:</b></div>
                    <div class="thirteen wide column"><%= student.student_profile.gender %></div>
                    <div class="three wide column"><b><%= t(".home_town") %>:</b></div>
                    <div class="thirteen wide column"><%= student.student_profile.address %></div>
                    <div class="three wide column"><b><%= t(".phone") %>:</b></div>
                    <div class="thirteen wide column"><%= student.student_profile.phone_number %></div>
                    <div class="three wide column"><b><%= t(".identity") %>:</b></div>
                    <div class="thirteen wide column"><%= student.student_profile.identity_card_number %></div>
                    <div class="three wide column"><b><%= t(".register_date") %>:</b></div>
                    <div class="thirteen wide column"><%= student.created_at.to_date %></div>
                    <div class="three wide column"><b><%= t(".check_in_date") %>:</b></div>
                    <% if student.check_in_date %>
                      <div class="thirteen wide column"><%= student.check_in_date.to_date %></div>
                    <% else %>
                      <div class="thirteen wide column"></div>
                    <% end %>
                    <div class="three wide column"><b><%= t(".extend_time") %>:</b></div>
                    <div class="thirteen wide column"><%= student.extended_time %></div>
                    <div class="three wide column"><b><%= t(".status") %>:</b></div>
                    <div class="thirteen wide column"><%= student.status %></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="actions" style="padding: 0.7rem 1rem;">
              <div class="ui cancel button">
                <%= t(".cancel") %>
              </div>
              <button class="ui youtube button" style="background-color: #db2828" onclick="deleteStudent(<%= student.id %>)">
                <%= t(".delete") %>
              </button>
              <button class="ui teal button" style="color: #ffffff !important; width: 6rem;" onclick="editStudent(<%= student.id %>)">
                <%= t(".edit") %>
              </button>
            </div>
          </div>
          <div class="ui mini modal" id="confirm-delete-<%= student.id %>">
            <div class="ui icon header">
              <i class="archive icon"></i>
              <%= t(".remove_student_form_title") %>
            </div>
            <div class="content" style="padding: 0 !important">
              <p><%= t(".remove_student_form_confirm") %></p>
            </div>
            <div class="actions" style="display: flex; justify-content: center">
              <div class="ui negative button">
                <i class="remove icon"></i>
                <%= t(".cancel") %>
              </div>
              <div class="ui positive right labeled icon button custom_btn" onclick="confirmRemove(<%= student.id %>)">
                <i class="checkmark icon"></i>
                <%= t(".approve") %>
              </div>
            </div>
          </div>
        <% end %>
      </tbody>
    </table>
    <div class="mt-4" style="float: right">
      <%= paginate @students, turbolinks: false %>
    </div>
  </div>
</div>

<div class="ui mini modal add_student">
  <div class="header">
    <%= t(".new_student_title") %>
  </div>
  <div class="content" style="padding: 0 !important">
    <div class="description">
      <%# <label style="display: inline-block">Ho va ten</label> %>
      <form id="add-form" class="ui form segment" style="border: none; -webkit-box-shadow: none; padding: 1rem 2rem !important">
        <div style="max-width: 0; max-height: 0; overflow: hidden;">
          <input autofocus="true" />
        </div>
        <div class="field" style="margin: 1rem auto;">
          <div class="ui left corner labeled input" style="display: block;" >
            <input type="text" placeholder="<%= t(".full_name") %>" style="display:block; width: 100%" name="name" tabindex="-1">
            <div class="ui left corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>
        <div class="field" id= "student_id_number_field" style="margin: 1rem auto;" onfocusout="checkDuplicate(this)">
          <div class="ui left corner labeled input" style="display: block;">
            <input type="text" placeholder="<%= t(".student_id_number") %>" style="display:block; width: 100%" name="student_id_number" tabindex="-1">
            <div class="ui left corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>
        <div class="field" style="margin: 1rem auto;">
          <div class="ui left corner labeled input" style="display: block;" >
            <input type="text" placeholder="<%= t(".student_id_number_confirm") %>" style="display:block; width: 100%" name="student_id_number_confirm" tabindex="-1">
            <div class="ui left corner label">
              <i class="asterisk icon"></i>
            </div>
          </div>
        </div>
        <div class="actions" style="display: flex; justify-content: center">
          <div class="ui button" onclick="cancel()">
            <%= t(".cancel") %>
          </div>
          <%# <button class="ui primary submit button" onclick="addSubmit(event)">Add</button> %>
          <div class="ui blue submit button"><%= t(".submit") %></div>
        </div>
      </form>
    </div>   
  </div>
</div>

<script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
